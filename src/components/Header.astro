</header>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Gluten:wght@400&display=swap");

  body {
    margin: 0;
    padding: 0;
  }

  /* Mobile */

  header {
    display: flex;
    justify-content: space-between;
    background-color: #ffbbea;
    padding: 10px;
    margin: 0;
  }

  header img {
    margin-top: 10px;
  }

  ul {
    list-style-type: none;
    display: flex;
    gap: 20px;
    align-items: space-between;
  }

  a {
    font-family: "Gluten", sans-serif;
    font-size: 10px;
    text-decoration: none;
    color: black;
  }
  a:hover {
    color: white;
  }

  /* Mobile burger-menu */

  .burger {
    display: block;
  }

  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer; 
  }

  .burger .line {
    display:block;
    width: 100%;
    height: 10px;
    background-color: black;
    margin-bottom: 5px;
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
    transition: 0.15s linear;
  }

  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
    transition: 0.2s linear;
  }

  nav.active .menu {
    display: block;
    background-color: #ffffffe0;
    position: absolute;
    top: 50px;
    left: 0;
    width: 100%;
    box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
    z-index: 1;
  }

  nav.active .menu li {
    margin: 10px 20px;
  }

  nav.active .menu a {
    font-size: 24px;
  }

  nav {
    display: flex;
    align-items: center;
  }
  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu li {
    margin-right: 20px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: #3c4b04;
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
  }

  .menu a:hover {
    color: #ffbbea;
  }

  .menu {
    display: none;
  }

  /* Desktop */

  @media screen and (max-width: 1600px) and (min-width: 600px) {
    header {
      display: flex;
      justify-content: space-between;
      background-color: #ffbbea;
      padding: 20px;
      margin: 0;
    }

    header img {
      width: 164px;
      height: 22px;
      margin-top: 10px;
    }

    ul {
      list-style-type: none;
      display: flex;
      gap: 60px;
      align-items: space-between;
    }

    a {
      font-family: "Gluten", sans-serif;
      font-size: 16px;
      text-decoration: none;
      color: black;
    }
    a:hover {
      color: white;
    }

    /* Desktop burger-menu */

    nav {
      display: flex;
      align-items: center;
    }

    .menu {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .menu li {
      margin-right: 20px;
    }

    .menu li:last-child {
      margin-right: 0;
    }

    .menu a {
      display: block;
      padding: 10px;
      color: black;
      text-decoration: none;
      transition: color 0.3s;
      text-align: end;
    }

    .menu a:hover {
      color: white;
    }

    .burger {
      display: none;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");

  burger.addEventListener("click", burgerClick);
  function burgerClick() {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  }
  menu.addEventListener("click", menuClick);
  function menuClick() {
    burger.classList.remove("active");
    nav.classList.remove("active");
  }
</script>
