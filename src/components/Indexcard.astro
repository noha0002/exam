---
const { indexTitel, image, indexTekst, buttonText, buttonLink } = Astro.props;
---


<article class="index-card">
    <img src={image} alt={indexTitel} class="card-image" />
  
    <h2 class="index-title">{indexTitel}</h2>
    <p class="index-tekst">{indexTekst}</p>
  
    <div class="knap">
      <a href={buttonLink}>{buttonText}</a>
    </div>
  </article>

<style>
.index-card {
  background: #F2C4E2;
  border-radius: 24px;
  padding: 0;
  width: 95%;
  overflow: hidden;
  text-align: center;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  
}

.card-image {
  width: 100%;
  height: 300px;
  object-fit: cover;
  display: block;
}

.index-title {

}

.index-tekst {
  padding: 0 32px 32px;
  margin: 0;
  font-size: 1rem;
  color: rgb(0, 0, 0);
}
.knap {
display: inline-block;
justify-content: center;
margin-top: auto;  
padding-bottom: 32px;
  }

  a {
    background-color: white;
    padding: 10px 50px;
    border-radius: 20px;
    font-size: 16px;
    text-decoration: none;
    color: black;


  }
  a:hover {
    border: 2px solid black;  } 
</style>
