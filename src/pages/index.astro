---
import Layout from "../layouts/Layout.astro";
import Indexcard from "../components/Indexcard.astro";
---

<Layout> 
    <section class="hero">
      <img src="https://picsum.photos/1480/680" alt="matchabike">
  
      <h1 class="overskrift">COPENHAGEN’S</h1>
      <h1 class="overskrift1">MOBILE MATCHA EXPERIENCE</h1>
  
      <p class="ptekst">
        Bringing authentic Japanese matcha and desserts directly to your events, storefronts, and special occasions across Denmark.
      </p>
  
      <div class="header-buttons">
        <button class="b1">Book Now</button>
        <button class="b2">Menu</button>  
      </div>
      <section class="grid-section">
        <Indexcard
          indexTitel="Events"
          indexTekst="Elevate your events - any special occasion, private or business, with our premium mobile matcha service and artisanal treats."
          image="https://picsum.photos/1480/680"
          buttonText="Read more"
          buttonLink="/events"
        />
      
        <Indexcard
          indexTitel="Menu"
          indexTekst="Indulge in our delicious matcha lattes and homemade matcha cookies — perfect for a refreshing boost anytime, anywhere!"
          image="https://picsum.photos/1480/680"
          buttonText="View menu"
          buttonLink="/liste-view"
        />
      
        <Indexcard
          indexTitel="Gallery"
          indexTekst="Stay connected with us through vibrant social media, interactive map, and captivating gallery."
          image="https://picsum.photos/1480/680"
          buttonText="Gallery"
          buttonLink="/galleri"
        />
      </section>

      <section class="grid2">
        <div class="text-content">
          <h1>Partnership Opportunities</h1>
          <p>Drive foot traffic, increase brand visibility, and create memorable customer experiences through strategic partnerships with The Matcha Bike.</p>
          <p><br><strong>Storefront Partnerships</strong></p>
          <p>2,500 DKK for 8 hours in front of your store (or inside if bad weather). You provide discount coupons for joint promotions while we drive foot traffic to your business.</p>
          <button class="b3">Partner With Us</button>  
        </div>
        <img class="img-grid" src="https://picsum.photos/300/400" alt="">
      </section>
      
</Layout>
  

