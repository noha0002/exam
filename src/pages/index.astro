gap: 10px;
gap: 20px;



    }
.b1{
background-color:#818C58;
border-radius: 20px;
border:3px solid #000000;
padding: 20px 20px;
width: 200px;
height: 60px;
color: rgb(22, 45, 26);

     
    }
.b2{
background-color: #FFBBEA;
border-radius: 20px;
border:3px solid #000000;
width: 200px;
height: 60px;
color: rgb(22, 45, 26);

    }

.overskrift1{
text-align: center;
